{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}
{% block stylesheets %}{% endblock %}

{% block top %}
    <div class="container">
        <div class="alert alert-danger text-center py-1" style="border-radius: 11px; border-top-right-radius: 0; border-top-left-radius: 0;" role="alert">
            <strong>Dashboard d'administration ~ <a href="{{ path('accueil') }}">Revenir sur le site</a></strong>
        </div>
    </div>
    <div class="container">
        <!-- Titre -->
        <div class="text-left">
            <img src="{{ app.request.getBasePath()~'/banniere.jpg' }}" alt="Bannière" >
        </div>
        <!-- Menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <p class="nav-link text-danger ms-1 me-4 mb-0">Dashboard d'administration</p>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('accueil') }}">Revenir sur le site</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin.formations') }}">Formations</a>
                    </li>
                </ul>
            </div>
        </nav>        
    </div>
{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
    <div class="container text-center">
        <footer>
            <hr>
            <p><small><em>
                Consultez nos <a class="link-secondary" href="{{ path('cgu') }}">Conditions Générales d'Utilisation</a>
            </em></small></p>
            
        </footer>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}

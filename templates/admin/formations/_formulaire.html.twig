{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

<div class="p-4 bg-light rounded">
    <div class="row mb-3">
        <div class="col-md-9">
            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 7}}) }}

    <div class="mb-3">
        <label class="form-label fw-bold">{{ form.categories.vars.label }}</label>
        <div class="d-flex flex-wrap gap-2">
            {% for child in form.categories %}
                <div class="form-check form-check-inline">
                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(child) }}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_row(form.playlist, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.videoId, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg">
            {{ button_label|default('Valider') }}
        </button>
    </div>
</div>

{{ form_end(form) }}
